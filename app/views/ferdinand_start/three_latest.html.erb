<h2>Three latest campaigns</h2>
<br />
<br />

<% @campaigns.each do |campaign| %>
<section class="row hide-on-phones">
 	<div class="twelve columns">
		<h3><%= campaign.name %> by <%= campaign.company.name %></h3>
		<br />
		<% @pages = campaign.pages %>					
		<% @pages.each do |page| %>
			<!-- if it is the first in a row make a new row -->						
			<% if page.number%4 == 1 %>
				<div class="row">
			<% end %>
			
				<!-- the page itself with its objects-->
				<div class="three columns">
					<div class="draganddropphone">
						<%= show_pageobjects(page.get_objects) %>
					</div>
				</div>						
							
			<!-- if it is the last in a row stop the row and set count to 1 -->	
			<% if page.number%4 == 0 %>
				</div>
				<br />
				<br />
			<% end %>					
		<% end %>
		
		<% if @pages.count%4 != 0 %>
			</div>
		<% end %>		
 	</div>
 </section>
	<br />
	<hr />
	<br />
<% end %>


<h5>Get started yourself: <%= link_to 'Sign in', new_designer_session_path, :class => "nice small radius blue button" %> or <%= link_to 'Sign up', new_company_path, :class => "nice small radius blue button" %></h5>